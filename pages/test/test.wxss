/* pages/test/test.wxss */
@import '../question/question-template.wxss';

.test-container {
  position: relative;
  /* border: 2rpx solid black; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-top: 40rpx; 
}
/* .questions {
  display: flex;
  flex-direction: column;
} */
.test-bottom {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin: 40rpx 0rpx; */
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}
.question-title {
  margin-left: 60rpx;
  padding-right: 60rpx;
}
.radio {
  padding-left: 70rpx;
  padding-right: 60rpx;
}
.checkbox {
  padding-left: 70rpx;
  padding-right: 60rpx;
}
.question-index {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}
.separate {
  float:left;
  margin: 0 0.3rem;
}
.curIndex {
  width: 3rem;
  text-align: right;
}
.totalIndex {
  width: 3rem;
}
.btn-area {
  display: flex;
}
.btn-area button {
  width: 260rpx;
  font-weight: 500;
  line-height: 2.4;
}
.btn-area .btn-pre {
  margin-right: 0.8rem;
}
.btn-area .unchecked {
  color: #999;
  background-color: rgba(255, 217, 0, 0.6);
}
