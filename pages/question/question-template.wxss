@import '../radio/radio-template.wxss';
@import '../checkbox/checkbox-template.wxss';

.question {
  display: flex;
  flex-direction: column;
  min-height: 900rpx;
  /* width: 700rpx; */
  font-size: 34rpx;
}
.question-title {
  display: flex;
}
/* .question-title.heighter {
  margin-bottom: 60rpx;
} */
.title-index {
  margin-right: 0.2rem;
}
.question-img {
  /* display: flex; */
  /* box-sizing: border-box; */
  align-self: center;
  margin-top: 20rpx;
  padding: 2rpx;
  width: 600rpx;
  height: 400rpx;
  /* overflow: hidden; */
  border: 2rpx solid #ffd900;
  font-size: 0;
}
.question-img image{
  width: 100%;
  height: 400rpx;
}
.radio-group-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.radio-contianer:first-child .radio.heighter {
  padding-top: 100rpx;
}
.checkbox-group-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.checkbox-contianer:first-child .checkbox.heighter {
  padding-top: 100rpx;
}
.options {
  display: flex;
  flex-direction: column;
  font-size: medium;
}